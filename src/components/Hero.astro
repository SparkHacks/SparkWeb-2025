---
import volcanoLeft from '../../public/svgs/volcano-left.svg'
import volcanoCenter from '../../public/svgs/volcano-center.svg'
import volcanoRight from '../../public/svgs/volcano-right.svg'
import volcanoCloud from '../../public/svgs/volcano-cloud.svg'
import volcanoLava from '../../public/svgs/volcano-lava.svg'
import island from '../../public/svgs/island.svg'
import tree from '../../public/svgs/palm-tree.svg'
---


<section 
  class="relative hero bg-gradient-to-b from-[#03161f] via-headerBotBlue to-headerBotBlue"
>

  <div class="absolute top-0 w-full h-full background-layer overflow-hidden">
    <div class="pl-14 moon-clouds absolute left-1/3 tablet:left-[50%] w-3/5 max-w-sm top-10">
      <!-- <img class="moon-clouds absolute left-1/3 tablet:left-[50%] w-3/5 max-w-sm top-14" src="/heroPageNew/MoonAndClouds.svg" /> -->
      <img class="moon" src="/heroPageNew/moon-and-clouds/Moon.svg" />
      <img class="cloud1" src="/heroPageNew/moon-and-clouds/Cloud-1.svg" />
      <img class="cloud" src="/heroPageNew/moon-and-clouds/Cloud.svg" />
    </div>
    <img class="dolphin z-40 absolute left-1/3 bottom-6 max-w-[20%] drop-shadow-xl" src="/heroPageNew/Dolphin.svg" />
    <div class="island-group right-[-500px] min-w-[500px]">
      <img class="ground island" src="/heroPageNew/Island.svg" />
      <img class="tree1" src="/heroPageNew/Tree.svg" />
      <img class="tree2" src="/heroPageNew/Tree.svg" />
    </div>
  </div>

  <div class="relative pt-16 h-[80vh] flex items-center z-[49]">
    <!-- SparkHacks Logo + CTA -->
    <div class="flex flex-col items-start space-y-2 pb-4 pl-3 tablet:pl-10 tablet:w-3/5">
      <img class="w-1/2 max-w-fit tablet:max-w-[18rem]" src="/heroPageNew/logo-night.svg" alt="logo">
      <h1 class="title text-5xl tablet:text-7xl font-bold px-4 tablet:px-8 text-[#ffffff] z-30">
        Sparkhacks 2025
      </h1>
      <h1 class="date text-3xl text-[#F6B09C] tablet:text-6xl font-bold px-4 tablet:px-8 z-30">
        FEB 07-08
      </h1>
    </div>

    <!-- <div class="overflow-y-hidden absolute bottom-0 right-[10.3%] w-1/3 z-10">
      <img class=" " src="/heroPage/moon.svg" alt="moon">
    </div> -->
  </div>

</section>

<!-- water -->
<div class="flex bg-[#014E6F]">
  <div class="hero flex w-full h-[25vh] flex-row z-30 
  bg-cover bg-bottom bg-no-repeat" style="background-image:url('/heroPageNew/water-night.svg')" >
    <img class="w-full h-full object-cover " src="/heroPage/subtract.svg">
  </div>

  <img class="w-full h-full absolute z-20 
  transform -translate-y-120 max-h-[50vh]" src="/heroPage/rays.png">
</div>


<style>
  .island-group {
    position: absolute;
    right: 0;
    bottom: -1px;
    width: 50%;
    min-width: 600px;
  }

  .tree1 {
    position: absolute;
    /* right: 90px; */
    width: 25%; /* percent of island*/
    z-index: 30;
    bottom: 0;
    transform: translateX(100%);
  }

  .tree2 {
    position: absolute;
    right: calc(20% + 2vw);
    width: 15.5%;
    bottom: 20px;
    transform: scaleX(-1);
    transform-origin: center;
    width: 15.5%;
    z-index: 30;
  }

  @media (max-width: 640px) { 
    .island-group {
      right: -300px;
      height: 10px;
    }
    
   }

  @media (min-width: 1133px) {
    .dolphin {
      left: clamp(680px, 50%, 50%);
    }
  }

  .island {
    z-index: 31;
    width: 100%;
  }

  .hero-text {
    z-index: 999;
  }

  .ground {
    position: absolute;
    bottom: 0;
  }

  .hero {
    /* background: linear-gradient(160deg, #0880ca 24.6%, #7dfff4 92.52%); */
    background-image: linear-gradient(180deg, #002242 0%, #0e477c 47%, #855186 70%, #e06e8d 86%, #ff8d7e 100%)
  }

  @keyframes jump {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(-5deg);
    }
  }

  .dolphin {
    animation: jump 3s ease-in-out infinite;
    transform-origin: center bottom;
  }

  @keyframes cloud-float {
    0%, 100% {
      transform: translateX(0) translateY(0);
    }
    50% {
      transform: translateX(12px) translateY(-5px);
    }
  }
  @keyframes cloud-float1 {
    0%, 100% {
      transform: translateX(0) translateY(0);
    }
    50% {
      transform: translateX(-12px) translateY(-5px);
    }
  }

  @keyframes moon-float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-5px);
    }
  }
  
  .cloud {
    scale: .8;
    position: absolute;
    left: -110px;
    top: 55px;
    animation: cloud-float 5s ease-in-out infinite;
  }
  .cloud1 {
    scale: .8;
    position: absolute;
    left: 145px;
    top: 100px;
    animation: cloud-float1 5s ease-in-out infinite;
  }
  .moon {
    scale: .9;
    position: absolute;
    animation: moon-float 5s ease-in-out infinite, glow 5s ease-in-out infinite;
  }
</style>