---
import volcanoLeft from '../../public/svgs/volcano-left.svg'
import volcanoCenter from '../../public/svgs/volcano-center.svg'
import volcanoRight from '../../public/svgs/volcano-right.svg'
import volcanoCloud from '../../public/svgs/volcano-cloud.svg'
import volcanoLava from '../../public/svgs/volcano-lava.svg'
import island from '../../public/svgs/island.svg'
import tree from '../../public/svgs/palm-tree.svg'
---

<div class="hero flex w-full h-[80vh] flex-row px-10
  bg-gradient-to-b from-headerTopBlue via-headerBotBlue to-headerBotBlue
  justify-center align-middle">
  
  <div class="flex flex-col justify-center
  container min-h-0 space-y-2" >
    <img class="max-w-md" src="/sparkhacks-logo.svg" alt="logo">
    
    <h1 class="text-[#ffffff] text-7xl font-bold px-10">
      Sparkhacks 2025
    </h1>
    <h1 class="text-[#F6B09C] text-6xl font-bold px-10">
      FEB 07-08
    </h1>
  </div>

  <div class="flex flex-col justify-end align-middle
  container min-h-0 z-100 ">
  
    <!-- div wrap to get x overflow visible and y hidden -->
     <div class="max-w-[90%] flex flex-col justify-end align-ce overflow-y-hidden">
        <img class="container self-center" src="/heroPage/moon.svg" alt="moon">
     </div>
  </div>
</div>

<!-- water -->
<div class="flex bg-[#014E6F]">
  <div class = "hero flex w-full h-[25vh] flex-row z-30 
  bg-cover bg-bottom bg-no-repeat" style="background-image:url('/heroPage/water.svg')" >
    <img class="w-full h-full object-cover " src="/heroPage/subtract.svg">
  </div>

  <img class="w-full h-full absolute z-20 
  transform -translate-y-120 max-h-[50vh]" src="/heroPage/rays.png">
</div>






