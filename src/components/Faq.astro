<section
  class="w-max-[300px] flex flex-col content-center items-center justify-center bg-gradient-to-b from-[#091f3d] to-[#041d33] text-white pt-20"
  id="faq"
  >
  <div class="flex place-content-center items-center px-[10%] pb-10">
    <h1 class="animate-bounce text-5xl mr-4">ðŸ’¬</h1>
