---
import { teamMembers } from "../data/teamMembers"
---

<section
  class="flex flex-col w-full items-center bg-blue-900 text-white"
>
  <h1 class="text-2xl mt-20">Meet the team</h1> 
  <div class="flex flex-wrap justify-center gap-10 px-[10%] mt-20 mb-20">
    {teamMembers.map(member => (
      <div class="w-[150px] teamCard flex flex-col items-center">
        {/* <img src="/Shell.svg" alt="shell photo" class="block"/> */}
        <img class="block w-[90px] h-[90px] object-cover mt-8 rounded-full	" src={member.image} alt="avatar"/>
        <div class="text-center bg-[#6680F2] w-[80%] mt-4">
          <div class="text-white text-lg">{member.name || "Name"}</div>
          <div class="text-white text-md">{member.title || "Title"}</div>
        </div>
      </div>
    ))}
  </div>
</section>
<style>
  .teamCard {
    background-image: url("/Shell.svg");
    background-position:top;
    background-repeat: no-repeat;
    background-size: contain;
  }
</style>
