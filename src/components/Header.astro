---
const links = [
  { name: 'Home', href: '#' },
  { name: 'About', href: '#about' },
  { name: 'Login', href: '#login' },
  { name: 'Register', href: '#register' },
]
---

<header
  class="header flex flex-row items-center justify-between bg-blue-700 px-4 py-2 text-white"
>
  <div class="text-lg">SparkHacks 2025</div>
  <ul class="flex flex-row gap-10">
    {
      links.map((link) => (
        <li>
          <a href={link.href}>{link.name}</a>
        </li>
      ))
    }
  </ul>
</header>
