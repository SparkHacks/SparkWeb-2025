    <div class="whale-group w-full">
      <img class="whale relative animate-bob-sway-slow w-[80%] tablet:w-[40%]" src={whale.src} />
      <img class="whale-robot relative animate-bob-sway-med w-[20%] tablet:w-[10%]" src={robot.src} />
    </div>
    <img class="right-rock" src={rock.src} />
  </div>

  <div
