<style>
  #chest {
    background: url('../chest.svg');
    width: 75px;
    height: 75px;
    background-repeat: no-repeat;
    background-size: 75px;
  }

  .break-group {
    width: 100%;
    min-width: 300px;
    top: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }
  .whale-group {
    display: flex;
    flex-direction: row;
    justify-content: left;
    width: 60%;
  }

  .whale {
    left: -4%;
  }

  .right-rock {
    width: 25%;
    right: 5%;
  }
</style>
